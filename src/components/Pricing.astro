---
const plans = [
  {
    name: 'Starter',
    price: 8,
    vcpu: '1',
    ram: '2 GB',
    storage: '50 GB',
    transfer: '2 TB',
    support: 'Standard',
    popular: false,
  },
  {
    name: 'Standard',
    price: 14,
    vcpu: '2',
    ram: '4 GB',
    storage: '80 GB',
    transfer: '4 TB',
    support: 'Standard',
    popular: true,
  },
  {
    name: 'Performance',
    price: 26,
    vcpu: '4',
    ram: '8 GB',
    storage: '160 GB',
    transfer: '5 TB',
    support: 'Priority',
    popular: false,
  },
  {
    name: 'Enterprise',
    price: null,
    vcpu: 'Custom',
    ram: 'Custom',
    storage: 'Custom',
    transfer: 'Custom',
    support: 'Dedicated',
    popular: false,
  },
];
---

<section id="pricing" class="border-b py-20">
  <div class="mx-auto max-w-6xl px-6">
    <div class="max-w-md">
      <p class="text-sm font-medium text-rose-500">Pricing</p>
      <h2 class="mt-2 text-2xl font-bold tracking-tight sm:text-3xl">
        Straightforward pricing
      </h2>
      <p class="mt-3 text-sm text-muted-foreground">
        All plans include an IPv4 address, a /64 IPv6 subnet, 5 Gbps port, DDoS protection, and managed backups. No setup fees.
      </p>
    </div>

    <!-- Desktop table -->
    <div class="mt-10 hidden overflow-hidden rounded-lg border lg:block">
      <table class="w-full text-left text-sm">
        <thead>
          <tr class="border-b bg-muted/50">
            <th class="px-5 py-3 font-medium text-muted-foreground">Plan</th>
            <th class="px-5 py-3 font-medium text-muted-foreground">vCPU</th>
            <th class="px-5 py-3 font-medium text-muted-foreground">RAM</th>
            <th class="px-5 py-3 font-medium text-muted-foreground">Storage</th>
            <th class="px-5 py-3 font-medium text-muted-foreground">Transfer</th>
            <th class="px-5 py-3 font-medium text-muted-foreground">Support</th>
            <th class="px-5 py-3 text-right font-medium text-muted-foreground">Price</th>
            <th class="px-5 py-3"></th>
          </tr>
        </thead>
        <tbody>
          {plans.map((plan) => (
            <tr class:list={['border-b last:border-0 transition-colors hover:bg-muted/30', plan.popular && 'bg-rose-500/[0.03] dark:bg-rose-500/[0.04]']}>
              <td class="px-5 py-4">
                <div class="flex items-center gap-2">
                  <span class="font-medium">{plan.name}</span>
                  {plan.popular && (
                    <span class="rounded-sm bg-rose-500 px-1.5 py-0.5 text-[10px] font-semibold uppercase tracking-wide text-white">
                      Popular
                    </span>
                  )}
                </div>
              </td>
              <td class="px-5 py-4 font-mono text-muted-foreground">{plan.vcpu}</td>
              <td class="px-5 py-4 font-mono text-muted-foreground">{plan.ram}</td>
              <td class="px-5 py-4 font-mono text-muted-foreground">{plan.storage}</td>
              <td class="px-5 py-4 font-mono text-muted-foreground">{plan.transfer}</td>
              <td class="px-5 py-4 text-muted-foreground">{plan.support}</td>
              <td class="px-5 py-4 text-right">
                {plan.price !== null ? (
                  <span class="font-mono font-semibold">${plan.price}<span class="text-xs font-normal text-muted-foreground">/mo</span></span>
                ) : (
                  <span class="text-sm text-muted-foreground">Contact us</span>
                )}
              </td>
              <td class="px-5 py-4 text-right">
                <a
                  href="/contact"
                  class:list={[
                    'inline-flex h-7 items-center rounded-md px-3 text-xs font-medium transition-colors',
                    plan.popular
                      ? 'bg-rose-500 text-white hover:bg-rose-600'
                      : 'border bg-background hover:bg-muted',
                  ]}
                >
                  {plan.price !== null ? 'Deploy' : 'Contact'}
                </a>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <!-- Mobile cards -->
    <div class="mt-10 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:hidden">
      {plans.map((plan) => (
        <div class:list={['rounded-lg border p-5 transition-colors hover:bg-muted/30', plan.popular && 'border-rose-500/50 ring-1 ring-rose-500/50']}>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <span class="font-semibold">{plan.name}</span>
              {plan.popular && (
                <span class="rounded-sm bg-rose-500 px-1.5 py-0.5 text-[10px] font-semibold uppercase tracking-wide text-white">
                  Popular
                </span>
              )}
            </div>
            {plan.price !== null ? (
              <span class="font-mono text-lg font-bold">${plan.price}<span class="text-xs font-normal text-muted-foreground">/mo</span></span>
            ) : (
              <span class="text-sm text-muted-foreground">Custom</span>
            )}
          </div>
          <div class="mt-4 grid grid-cols-2 gap-2 font-mono text-sm text-muted-foreground">
            <span>{plan.vcpu} vCPU</span>
            <span>{plan.ram} RAM</span>
            <span>{plan.storage} SSD</span>
            <span>{plan.transfer} transfer</span>
          </div>
          <a
            href="/contact"
            class:list={[
              'mt-4 inline-flex h-8 w-full items-center justify-center rounded-md text-sm font-medium transition-colors',
              plan.popular
                ? 'bg-rose-500 text-white hover:bg-rose-600'
                : 'border bg-background hover:bg-muted',
            ]}
          >
            {plan.price !== null ? 'Deploy' : 'Contact Us'}
          </a>
        </div>
      ))}
    </div>

    <!-- Included with all plans -->
    <div class="mt-6 flex flex-wrap gap-x-6 gap-y-2 text-sm text-muted-foreground">
      <span class="flex items-center gap-1.5">
        <svg class="h-3.5 w-3.5 text-rose-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
        Managed backups
      </span>
      <span class="flex items-center gap-1.5">
        <svg class="h-3.5 w-3.5 text-rose-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
        DDoS protection
      </span>
      <span class="flex items-center gap-1.5">
        <svg class="h-3.5 w-3.5 text-rose-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
        1x IPv4 + /64 IPv6
      </span>
      <span class="flex items-center gap-1.5">
        <svg class="h-3.5 w-3.5 text-rose-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
        5 Gbps port
      </span>
      <span class="flex items-center gap-1.5">
        <svg class="h-3.5 w-3.5 text-rose-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
        Control panel
      </span>
      <span class="flex items-center gap-1.5">
        <svg class="h-3.5 w-3.5 text-rose-500" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
        One-click apps
      </span>
    </div>
  </div>
</section>
